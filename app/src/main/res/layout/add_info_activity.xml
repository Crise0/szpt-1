<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="发布信息"
            android:textSize="20dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="物品名称:"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edt_things_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="选择发布类型:"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="18dp"/>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/spn_add_info_type"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="物品描述:"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edt_things_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="校区:"
                android:textSize="18dp"/>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/spn_campus"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="地点:"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/edt_things_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="时间:"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edt_things_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="联系方式:"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edt_things_contact_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:numeric="integer"
                android:hint="手机号码"/>

        </LinearLayout>
        <ImageView

            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="172dp"
             android:src="@android:drawable/ic_menu_gallery"
            android:id="@+id/add_things_image" />

        <Button
            android:text="发布"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_ok" />
        <Button
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_no" />

    </LinearLayout>
</ScrollView>
