<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txv_course_name"
            android:text="Macios应用开发"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txv_course_time"
            android:text="3,4节8.30上课"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txv_course_place"
            android:text="西丽湖校区,信息楼408"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/txv_next_course"
            android:text="下一节"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txv_last_course"
            android:text="上一节"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>