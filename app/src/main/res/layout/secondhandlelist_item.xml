<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/headIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/headname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小陈"
                    android:textSize="20sp"
                    android:textColor="#bb000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学院:"
                    android:layout_marginLeft="10dp"
                    android:textColor="#BFBFBF"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/et_xueyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算机工程"
                    android:textColor="#BFBFBF"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/headname">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布:"
                    android:layout_marginLeft="5dp"
                    android:textColor="#BFBFBF"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/et_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:55"
                    android:textColor="#BFBFBF"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_margin="5dp">
        <!-- <android.support.v4.view.ViewPager
              android:id="@+id/viewPager"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >
           </android.support.v4.view.ViewPager> -->
        <HorizontalScrollView
            android:id="@+id/hzsv"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:scrollbars="none"
            >
            <LinearLayout
                android:id="@+id/id_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="213165496464654987541654498464987947984645646464646546465465454"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_shouc"
                android:layout_height="wrap_content"
                android:onClick="favorite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:drawableBottom="@android:drawable/star_on"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#ff9797"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#ff0000"
                android:text="￥"/>
            <TextView
                android:id="@+id/et_pricenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ff0000"
                android:text="250"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="#d0d0d0"
                android:text="￥"/>
            <TextView
                android:id="@+id/et_priceold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#d0d0d0"
                android:text="500"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tel_phone"
                android:layout_height="wrap_content"
                android:onClick="et_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginLeft="1dp"
                android:drawableLeft="@android:drawable/sym_action_call"
                android:gravity="center"
                android:text="联系"
                android:background="@drawable/textview_border"
                android:textColor="#ff9797"/>
            <TextView
                android:id="@+id/tv_massage"
                android:layout_height="wrap_content"
                android:onClick="et_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginLeft="1dp"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:gravity="center"
                android:text="私信"
                android:textColor="#ff9797"
                android:background="@drawable/textview_border"/>
            <TextView
                android:id="@+id/tv_liuyan"
                android:layout_height="wrap_content"
                android:onClick="et_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginLeft="1dp"
                android:drawableLeft="@android:drawable/sym_action_chat"
                android:gravity="center"
                android:text="留言"
                android:textColor="#ff9797"
                android:background="@drawable/textview_border"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
